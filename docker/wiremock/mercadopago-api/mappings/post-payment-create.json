{
  "priority": 1,
  "request": {
    "method": "POST",
    "url": "/v1/payments"
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "id": "{{randomValue length=10 type='NUMERIC'}}",
      "status": "pending",
      "date_created": "{{now format='yyyy-MM-dd HH:mm:ss'}}",
      "date_approved": null,
      "external_reference": "{{jsonPath request.body '$.external_reference'}}",
      "transaction_amount": "{{jsonPath request.body '$.transaction_amount'}}",
      "payment_method": {
        "id": "pix",
        "type": "bank_transfer",
        "issuer_id": null
      },
      "payer": {
        "email": "{{jsonPath request.body '$.payer.email'}}"
      },
      "point_of_interaction": {
        "transaction_data": {
          "qr_code": "00020126580014br.gov.bcb.pix0136a629532e-7693-4846-852d-1bbff6b2f8cd520400005303986540510.005802BR5913Teste",
          "qr_code_base64": "iVBORw0KGgoAAAANSUhEUgAAAZAAAAGQAQAAAACoxAthAAADe0lEQVR42u3bS27jMAwA0P//6XRhILhIL2ygQAaCgUKRaVuOZUmW9FgZTLfNkH6PkmxJ7p8="
        }
      }
    },
    "transformers": ["response-template"]
  }
}
